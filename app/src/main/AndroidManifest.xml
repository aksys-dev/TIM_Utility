        <activity
            android:name=".activity.ButtonSettingActivity"
            android:label="@string/menu_button_configureation" /> <!-- android:persistent="true" -->
        <service
            android:name=".service.QuickSettingService"
            android:icon="@drawable/tim_logo_transparent"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>
