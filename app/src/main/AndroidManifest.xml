                <protected-broadcast android:name="android.intent.action.GAMEPAD_DEVICE_CONNECTED" />
                <protected-broadcast android:name="android.intent.action.GAMEPAD_DEVICE_DISCONNECTED" />
        -->
        <activity
            android:name=".activity.FOTA_V2"
            android:configChanges="keyboardHidden|orientation|mcc|mnc|uiMode|locale|keyboard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="technicolor.intent.action.MANAGE_PARTNER_ACCESSORY" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.FOTAV2Main"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.GamepadActivity"
            android:label="@string/title_gamepad"
            android:parentActivityName=".activity.FOTAV2Main" />
        <activity
            android:name=".activity.SetupIMUActivity"
            android:label="@string/menu_imu"
            android:parentActivityName=".activity.FOTAV2Main" />
        <activity
            android:name=".activity.AboutActivity"
            android:label="@string/menu_about"
            android:parentActivityName=".activity.FOTAV2Main" />
        <activity
            android:name=".activity.UpgradeUIActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.FotaMainActivity" />

        <receiver android:name=".service.UpdatePowerOnReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="it.telecomitalia.TIMgamepad2.RESTART_SERVICE" />
                <action android:name="android.bluetooth.device.action.ACL_CONNECTED" />
                <action android:name="android.bluetooth.device.action.ACL_DISCONNECTED" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="5a27c151bacefaa8caa914c829eb7df326cd1d8b" />

        <service
            android:name=".service.UpdateFotaMainService"
            android:priority="1000" />
        <service android:name=".service.UpdateRecommendationsService" />
        <service
            android:name=".service.FabricAccessabilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility" />
        </service>
        <service
            android:name=".service.GamePadService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="it.telecomitalia.TIMgamepad2.IGamePadService" />
            </intent-filter>
        </service>

        <activity android:name=".activity.SensorCalibrationActivity" />
    </application>

</manifest>